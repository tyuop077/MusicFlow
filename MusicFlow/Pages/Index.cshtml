@page
@model IndexModel
@{
    ViewData["Title"] = "Music Flow";
}

<link rel="stylesheet" href="~/css/main_page.css" />
<h1 class="text-center display-3 text-white">Music Flow</h1>
<div class="showcase">
    <div class="content">
        <h2 class="text-white display-4">Your music library, always available</h2>
        <h3 class="text-white mt-3">Find, listen and share your favourite songs without any artist restrictions</h3>
        <h4 class="text-white mt-2 font-weight-light">
            Upload your own music to MusicFlow, share your songs and playlists by link with friends, track the date you've uploaded specific song and browse through the collections of other users
        </h4>
    </div>
    <img src="~/img/MusicFlowShowcase.svg" />
    <div class="clear" />
</div>